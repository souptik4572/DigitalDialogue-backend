# Environment Configuration Sample File
# Copy this file to .env and update the values according to your setup

# Application Environment
# Set to 'production' for production deployment, 'development' for local development
NODE_ENV=development

# Server Configuration
# Port number for the server to run on (default: 3000)
PORT=3000

# Database Configuration
# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/your-database-name
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database-name
DATABASE_URL=mongodb://localhost:27017/Digital-Dialogue

# Authentication Configuration
# JWT secret token for signing and verifying authentication tokens
# Use a strong, random string in production (e.g., generate with: openssl rand -base64 32)
ACCESS_SECRET_TOKEN=your-super-secret-jwt-token-here

# Password Hashing Configuration
# Number of salt rounds for bcrypt password hashing (recommended: 10-12)
# Higher numbers are more secure but slower
BCRYPT_SALT=10
